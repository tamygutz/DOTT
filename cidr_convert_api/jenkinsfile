pipeline {
    agent any
    environment {
        SCANNER_HOME 'SonarQubeScanner'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/tamygutz/DOTT.git']]])
            }
        }
        stage('Build') {
            steps {
                git branch: 'master', url: 'https://github.com/tamygutz/DOTT.git'
            }
        }
        stage('SonarCloud Analysis') {
            steps {
                script {
                    withSonarQubeEnv ('SonarCloud') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.organization=tamygutz \
                            -Dsonar.projectKey=tamygutz_DOTT \
                            -Dsonar.sources=./cidr_convert_api/python/ \
                            -Dsonar.host.url=https://sonarcloud.io   '''
                    }
                }
            }
        }
    }
}
